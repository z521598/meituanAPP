<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iat_image"
        android:layout_marginLeft="10dp"
        android:src="@drawable/user_no_default"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Title"
        android:id="@+id/iat_title"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="30dp"
        android:textSize="20dp"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/iat_image"
        android:layout_toEndOf="@+id/iat_image"
        android:layout_marginStart="30dp" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/iat_ratingBar"
        android:layout_alignBottom="@+id/iat_image"
        android:layout_alignLeft="@+id/iat_title"
        android:layout_alignStart="@+id/iat_title"
        style="?android:attr/ratingBarStyleSmall"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="Content"
        android:id="@+id/iat_content"
        android:layout_above="@+id/iat_ratingBar"
        android:layout_alignLeft="@+id/iat_ratingBar"
        android:layout_alignStart="@+id/iat_ratingBar" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:text="mark"
        android:id="@+id/iat_mark"
        android:layout_alignTop="@+id/iat_title"
        android:layout_alignParentRight="true" />
</RelativeLayout>